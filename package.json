{
    "name": "geeks-diary",
    "version": "1.0.0",
    "description": "Geek's Diary - TIL writing tool",
    "scripts": {
        "start:main": "npx webpack --config configs/webpack.electron.js --watch",
        "start:renderer": "npx webpack --config configs/webpack.browser.dev.js --watch",
        "build:main": "RUN_TARGET=production npx webpack --config configs/webpack.electron.js",
        "build:renderer": "RUN_TARGET=production npx webpack --config configs/webpack.browser.prod.js",
        "launch": "npx electron --inspect=5858 dist/main.js",
        "clean:dist": "npx rimraf dist/",
        "clean:packages": "npx rimraf packages/",
        "ci:travis": "npm run test && npm run build:main && npm run build:renderer",
        "lint": "npx tslint --project tsconfig.json",
        "test": "npm run lint && npx karma start configs/karma.conf.js",
        "package": "npx electron-builder -mwl",
        "tools:copy-vendors": "tools/copy-vendors.sh"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/seokju-na/geeks-diary.git"
    },
    "author": {
        "name": "Seokju Na",
        "email": "seokju.me@gmail.com"
    },
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/seokju-na/geeks-diary/issues"
    },
    "homepage": "https://github.com/seokju-na/geeks-diary#readme",
    "devDependencies": {
        "@angular/animations": "^5.2.2",
        "@angular/cdk": "^5.1.1",
        "@angular/cli": "^1.6.6",
        "@angular/common": "^5.2.2",
        "@angular/compiler": "^5.2.2",
        "@angular/compiler-cli": "^5.2.2",
        "@angular/core": "^5.2.2",
        "@angular/forms": "^5.2.2",
        "@angular/platform-browser": "^5.2.2",
        "@angular/platform-browser-dynamic": "^5.2.2",
        "@ngtools/webpack": "^1.9.6",
        "@types/jasmine": "^2.8.6",
        "@types/node": "^9.4.0",
        "angular2-template-loader": "^0.6.2",
        "awesome-typescript-loader": "^3.4.1",
        "codelyzer": "^4.1.0",
        "copy-webpack-plugin": "^4.3.1",
        "core-js": "^2.5.3",
        "css-loader": "^0.28.9",
        "devicon": "^2.0.0",
        "electron": "^1.7.12",
        "electron-builder": "^19.55.2",
        "electron-devtools-installer": "^2.2.3",
        "exports-loader": "^0.7.0",
        "extract-text-webpack-plugin": "^3.0.2",
        "html-loader": "^0.5.5",
        "html-webpack-plugin": "^2.30.1",
        "istanbul-instrumenter-loader": "^3.0.0",
        "jasmine-core": "^2.9.1",
        "karma": "^2.0.0",
        "karma-coverage-istanbul-reporter": "^1.4.1",
        "karma-electron": "^5.2.2",
        "karma-electron-launcher": "^0.2.0",
        "karma-jasmine": "^1.1.1",
        "karma-sourcemap-loader": "^0.3.7",
        "karma-webpack": "^2.0.9",
        "less": "^3.0.0",
        "less-loader": "^4.0.5",
        "line-awesome": "icons8/line-awesome",
        "lodash.camelcase": "^4.3.0",
        "monaco-editor": "^0.10.1",
        "optimize-js-plugin": "^0.0.4",
        "postcss-loader": "^2.0.10",
        "raw-loader": "^0.5.1",
        "rimraf": "^2.6.2",
        "rxjs": "^5.5.0",
        "source-map-loader": "^0.2.3",
        "spectron": "^3.8.0",
        "tslint": "^5.9.1",
        "typeface-open-sans": "^0.0.54",
        "typescript": "^2.6.2",
        "webpack": "^3.10.0",
        "webpack-merge": "^4.1.1",
        "zone.js": "^0.8.20"
    },
    "build": {
        "appId": "me.seokju.geeks-diary",
        "productName": "Geeks Diary",
        "directories": {
            "buildResources": "src/resources/",
            "output": "packages/",
            "app": "dist/"
        },
        "asar": true
    },
    "engines": {
        "node": ">= 8.0.0",
        "npm": ">= 5"
    }
}
